{% extends 'base.html.twig' %}

{% block title %}connexion
{% endblock %}

{% block body %}
	<!-- Section: Design Block -->
	<section
		class="text-center w-50 m-auto my-5">
		<!-- Background image -->
		<div class="p-5 bg-image1"></div>
		<!-- Background image -->

		<div class="card mx-4 mx-md-5 shadow-5-strong card-login">
			<div class="card-body py-5 px-md-5">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Vous êtes connecté(e) comme
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Me déconecter</a>
						</div>
					{% endif %}
					<div class="row d-flex justify-content-center">
						<div class="col-lg-8">
							<h2 class="fw-bold mb-5">Me connecté</h2>
							<!-- Email input -->
							<div class="form-outline mb-4">
								<input type="email" value="{{ lastUsername }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
								<label class="form-label" for="form3Example3">Email</label>
							</div>

							<!-- Password input -->
							<div class="form-outline mb-4">
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
								<label class="form-label" for="form3Example4">Mot de passe</label>
							</div>

							<input
							type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<!-- Submit button -->
							<button type="submit" class="btn btn-primary btn-block mb-4">
								Se connecté
							</button>
						</form>
						<!-- Register buttons -->
					</form>
				</div>
				<a href="{{ path('app_forgotte_password')}}" class="">Mot de passe oublié</a>
				<a href="{{ path('app_register')}}" class="">M'inscrire</a>
			</div>
		</div>
	</div>
</section>{% endblock %}
